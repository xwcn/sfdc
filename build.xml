<project default="test" basedir="." xmlns:sf="antlib:com.salesforce">

    <property file="build.properties"/>
    <property environment="env"/>

	<target name="test">
      <sf:deploy username="${sf.username}" password="${sf.password}" serverurl="${env.sf_deploy_server}" deployRoot="src" runAllTests="true" />
    </target>

	<target name="clean">
      <sf:deploy username="${sf.username}" password="${password}" serverurl="${serverurl}" deployRoot="clean" />
    </target>

</project>